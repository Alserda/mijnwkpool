<% title "Ranking" %>
<div class='grid-r'>
  <div class='medium-3-4'>
    <div class='box'>
      <div class='content-header'>
        <h1>Ranking top 100</h1>
      </div>
      <div class="pooldashboard-content">
        <table class="table rank">
          <thead>
            <tr>
              <th>#</th>
              <th>Nickname</th>
              <th>Pool</th>
              <th>Score</th>
            </tr>
          </thead>
          <tbody>
            <% @rankings.each_with_index do |ranking, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= ranking['nickname'] %></td>
              <td><%= ranking['pool'] %></td>
              <td class="bold"><%= ranking['score'] %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class='default-0 medium-1-4'>
    <%= render "shared/aside" %>
    <%= render "shared/aside_admin" %>
    <%= render "shared/aside_ad" %>
  </div>
</div>

<%= javascript_tag do %>
  filterHandle();
  rangeSlider();
<% end %>

