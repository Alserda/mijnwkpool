<% title "Log in" %>
<div class="grid-r">
  <div class="default-hide small-1-6 medium-1-4">&nbsp;</div>
  <div class="small-2-3 medium-1-2">
    <div class="box">
      <div class="content-header">
        <h1>Login</h1>
      </div>
      <div class="login-form">
        <%= form_for(:session, url: sessions_path) do |f| %>
          <div class="form-field login">
            <%= f.text_field :email, :placeholder => 'Email' %>
            <%= f.password_field :password, :placeholder => 'Wachtwoord'%>
          </div>

          <div class="form-field action">
            <div class='default-1 small-1-2'>
              <%= f.submit "Login", :class => 'btn green fullwidth' %>
            </div>
            <div class='default-1 small-1-2'>
              <%= link_to 'Registreren', register_path, :class => 'btn grey fullwidth' %>
            </div>
          </div>
          <div class="form-field">
            <%= link_to 'Wachtwoord vergeten?', new_password_reset_path %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="default-hide small-1-6 medium-1-4">&nbsp;</div>
</div>