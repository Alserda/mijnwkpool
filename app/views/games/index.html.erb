      <th>Afbeelding team 1</th>
      <th>Score 1</th>
      <th>Score 2</th>
      <th>Afbeelding team 2</th>
    </tr>

    <% @games.each do |game| %>

      <tr> 
        <td><%= game.team1_id %></td>
        <td><%= game.score1 %></td>
        <td><%= game.score2 %></td>
        <td><%= game.team2_id %></td>

        <td><%= button_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>

</table>
