<div class="grid-r">
  <div class="medium-4-4">
    <div class="box">
      <div class="content-header">
        <h1>Wedstrijden</h1>
      </div>
      <div class="pooldashboard-content">
        <%= form_for (@game) do |f| %>
        <%= f.label :score1, 'Score 1' %>
        <%= f.text_field :score1 %>

        <%= f.label :score2, 'Score 2' %>
        <%= f.text_field :score2 %>

        <%= f.label :team1_id, 'Team 1' %> -
        <%= select_tag "team1_id", options_from_collection_for_select(Team.all, "id", "name")%><br/>

        <%= f.label :team2_id, 'Team 2' %> -
        <%= select_tag "team2_id", options_from_collection_for_select(Team.all, "id", "name")%><br/>
        <%= f.date_select :date %><br/>
        <%= f.time_select :time %><br/>
        <select id="gametype"name="gametype">
          <option value="Poule">Poule</option>
          <option value="Knockout">Knockout</option>
          <option value="Kwartfinale">Kwartfinale</option>
          <option value="Halve finale">Halve finale</option>
        </select>
        <br/>
        <br/>
        <div class="actions">
          <%= f.submit %>
        </div>
        <% end %>               
      </div>
    </div>
  </div>
</div>