<% title "Wachwoord herstellen" %>
<div class="grid-r">
  <div class="default-hide small-1-6 medium-1-4">&nbsp;</div>
  <div class="small-2-3 medium-1-2">
    <div class="box">
      <div class="content-header">
        <h1>Wachtwoord herstellen</h1>
      </div>
      <div class="login-form">
        <%= form_for @user, :url => password_reset_path(params[:id]) do |f| %>
          <% if @user.errors[:password].empty? %>
            <div class="form-field">
          <% else %>
            <div class="form-field error">
          <% end %>
            <%= f.label :password, 'Wachtwoord' %>
            <%= f.password_field :password %>
          </div>

          <% if @user.errors[:password].empty? %>
            <div class="form-field">
          <% else %>
            <div class="form-field error">
          <% end %>
            <%= f.label :password_confirmation, 'Wachtwoord herhalen' %>
            <%= f.password_field :password_confirmation %>
          </div>

          <div class="form-field action">
            <%= f.submit "Wachtwoord herstellen", :class => 'btn green fullwidth' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="default-hide small-1-6 medium-1-4">&nbsp;</div>
</div>