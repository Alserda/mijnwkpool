<% title "Wachwoord herstellen" %>
<div class="grid-r">
  <div class="default-hide small-1-6 medium-1-4">&nbsp;</div>
  <div class="small-2-3 medium-1-2">
    <div class="box">
      <div class="content-header">
        <h1>Wachtwoord herstellen</h1>
      </div>
      <div class="login-form">
        <%= form_tag password_resets_path, :method => :post do %>
          <div class="form-field">
            <%= label_tag :email, 'E-mail' %>
            <%= text_field_tag :email, params[:email] %>
          </div>

          <div class="form-field action">
            <div class='default-1 small-1-2'>
              <%= submit_tag "Wachtwoord herstellen", :class => 'btn green fullwidth' %>
            </div>
            <div class='default-1 small-1-2'>
              <%= link_to 'Inloggen', log_in_path, :class => 'btn grey fullwidth' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="default-hide small-1-6 medium-1-4">&nbsp;</div>
</div>