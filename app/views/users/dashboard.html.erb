<% title "Dashboard" %>
<div class="grid-r">
  <div class="medium-3-4">
   <div class="box">
      <div class="content-header">
        <h1>Dashboard</h1>
      </div>

      <% if current_user.poolmemberships.count < 1 %>
      <div id="contentflash" class="contentflash error">
        <div class="view-table">
          <div class="view-row">
            <div class="flashcontent-icon"><i class="fa fa-users"></i></div>
            <div class="contentflash-text">Let op! Je hebt je nog niet bij een pool aangesloten!</div>
          </div>
        </div>
          <script>contentflashMessage();</script>
      </div>
      <% end %>

      <div id="contentflash" class="contentflash success">
        <div class="view-table">
          <div class="view-row">
            <div class="flashcontent-icon"><i class="fa fa-file-text"></i></div>
            <div class="contentflash-text">Het is nu mogelijk om je poule eindstanden te wijzigen! Zie nieuwe melding.</div>
          </div>
        </div>
          <script>contentflashMessage();</script>
      </div>

