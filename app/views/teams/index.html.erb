<div class="grid-r">
  <div class="medium-4-4">
    <div class="box">
      <form accept-charset="UTF-8" action="/app/teams" class="new_team" enctype="multipart/form-data" id="new_team" method="post">
        <div class="content-header">
          <h1>Teams</h1>
        </div>         
        <div class="pooldashboard-content">
          <%= link_to 'Team toevoegen', new_team_path %> | <%= link_to 'Wedstrijd toevoegen', games_path %><br/>
          <table>
            <tr>
              <th>Afbeelding</th>
              <th>Naam</th>
              <th>Poule</th>
              <th>Stand</th>
              <th>Verwijder</th>
            </tr>
            <% @teams.each do |team| %>
              <tr class="eventlist1"> 
                <td><%= image_tag team.avatar.url(:mini) %></td>
                <td><%= team.name %></td>
                <td><%= team.poule %></td>
                <td><%= team.originalposition %></td>
                <td><%= button_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>             
          </table>
        </div>  
      </div>
    </div>
  </div>
</div>