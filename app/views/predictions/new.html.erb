<% title @pool.name %>
<div class='grid-r'>
  <div class='medium-3-4'>
    <div class='box'>
      <div class='content-header'>
        <h1>Voorspellingen - <%= @pool.name %></h1>
      </div>
      <div class='pool-list'>
        <ul>
          <li>
              Original score: <br/>
              <% @game.each do |game| %>
                  <tr> 
                    <td><%= Team.find(game.team1_id).name %></td>
                    <td>                  
                      <% if game.score1 == nil && game.score2 == nil %>
                        x - x
                      <% else %>
                        <%= game.score1 %> - <%= game.score2 %>
                      <% end %> 
                    </td>
                    <td><%= Team.find(game.team2_id).name %></td>
                  	<td><%= form_for Prediction.new, html: { multipart: true } do |f| %>
													<%= f.hidden_field :poolmembership_id, :value => Poolmembership.find(current_user.id).id %>
													<%= f.hidden_field :game_id, :value => game.id %>
	                        <%= f.label :prediction1, 'prediction 1' %>
	                        <%= f.number_field :prediction1 %>
	                        <%= f.label :prediction2, 'prediction 2' %>
	                        <%= f.number_field :prediction2 %>
	                        <%= f.submit %></br>
                    </td>                  
                  </tr>
                    		<% end %>                             
                <% end %>
                <br/>                
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class='default-0 medium-1-4'>
    <%= render "shared/aside" %>
  </div>
</div>
<%= javascript_tag do %>
  filterHandle();
  rangeSlider();
<% end %>


