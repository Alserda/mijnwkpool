<div class='grid-r'>
  <div class='medium-3-4'>
    <div class='box'>
      <div class='content-header'>
      </div>

      <div class='pool-list'> 
        <ul>
          <li>
            <div class='view-table'>
              <div class='pool-list-txt'>
                <% @games.each do |game| %>            
                  <h3><%= Team.find(game.team1_id).name %>
                  <% if game.score1 == nil && game.score2 == nil %>
                    x - x
                  <% else %>
                    <%= game.score1 %> - <%= game.score2 %>
                  <% end %>
                  <%= Team.find(game.team2_id).name %></h3>
                <% end %><br/>
                
  							<% current_user.predictions.each do |p| %>
                  <% a = Pool.find(params[:pool_id]) %>
                  <% b = Poolmembership.find(p.poolmembership_id) %>

                  <% if a.id == b.pool_id %>
                    Poolmembership ID: <%= best_in_place Prediction.find(p.id), :poolmembership_id %> ||
                    Game ID: <%= best_in_place Prediction.find(p.id), :game_id %> ||
                    <%= best_in_place Prediction.find(p.id), :prediction1 %> -
                    <%= best_in_place Prediction.find(p.id), :prediction2 %><br/>
                  <% else %>
                  <% end %>
                <% end %><br/><br/>
              </div>
            </div>   
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class='default-0 medium-1-4'> 
    <%= render "shared/aside" %>
  </div>
</div>

       