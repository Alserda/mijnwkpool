<div class='grid-r'>
  <div class='medium-3-4'>
    <div class='box'>
      <div class='content-header'>
      </div>
      <div class='pool-list'> 
        <ul>
          <li>
            <div class='view-table'>
              <div class='pool-list-txt'>INDEX
                <% @games.each do |game| %>            
                  <h3><%= Team.find(game.team1_id).name %>
                    <% if game.score1 == nil && game.score2 == nil %>
                      x - x
                    <% else %>
                      <%= game.score1 %> - <%= game.score2 %>
                    <% end %>
                    <%= Team.find(game.team2_id).name %></h3>
                <% end %>
<br/>
      							<% current_user.predictions.each do |p| %>
                        
                        Poolmembership: <%= best_in_place Prediction.find(p.id), :poolmembership_id %> || 
                        Pool - <%= Poolmembership.find(p.poolmembership_id).pool_id %> ||

                         <%= best_in_place Prediction.find(p.id), :prediction1 %> -
                         <%= best_in_place Prediction.find(p.id), :prediction2 %>
                         <br/>
             
                      
                    <% end %>
                    <br/>
                    <br/>

                    Current User ID - <%= current_user.id %><br/>
                    <% a = Pool.find(params[:pool_id]) %>
                    Pool ID - <%= a.id %>


              </div>
            </div>   
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class='default-0 medium-1-4'>
    <%= render "shared/predictions" %>  
    <%= render "shared/aside" %>
  </div>
</div>

       