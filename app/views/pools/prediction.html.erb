

<div class="grid-r">
  <div class="medium-3-4">
   <div class="box">
      <div class="content-header">
        <h1>Mijn voorspellingen</h1>
      </div>

      <div class="prediction-steps">
        <div class="steps">
          <div class="step active">
            <span class="small-hide">1.</span> <span class="default-hide small-show">Poule wedstrijden</span>
          </div>
          <div class="step">
            <span class="small-hide">2.</span> <span class="default-hide small-show">Poule eindstanden</span>
          </div>
          <div class="step">
            <span class="small-hide">3.</span> <span class="default-hide small-show">Knock-out fase</span>
          </div>
          <div class="step">
            <span class="small-hide">4.</span> <span class="default-hide small-show">Bonus vragen</span>
          </div>
        </div>
      </div>

      <div class="pooldashboard-content">
        <h2>Poule wedstrijden</h2>

        <table class="table poule">
          <thead>
            <th class="groupname" colspan="4">Groep A</th>
            <th class="default-hide small-show">&nbsp;</th>
            <th class="default-hide small-show">&nbsp;</th>
            <th class="default-hide small-show">Uitslag</th>
            <th>Punten</th>
            <tbody>
              
              <% @games.each do |game| %>
                <tr>
                  <td class="infoshower">
                    <i class="fa fa-question-circle"></i>
                    <div class="infobox hiddeninfo"><%= Team.find(game.team1_id).name %> - <%= Team.find(game.team2_id).name %> <br /> <span><%= game.date.strftime('%C %B') %>, <%= game.time.strftime('%H:%M') %></span></div>
                  </td>
                  
                  <td class="default-hide small-show"><%= Team.find(game.team1_id).name %></td>
                  <td class="flag"><%= image_tag Team.find(game.team1_id).avatar.url(:mini) %></td>
                  <td class="predict-score">
                    <div class="view-table">
                      <div class="view-row">
                        <%= form_for @prediction do |f| %>

                            <%= f.number_field :prediction1, :class => 'predict' %> -

                            <%= f.number_field :prediction2, :class => 'predict' %>

                          <%= hidden_field_tag :game_id, game.id %>
                          <%= hidden_field_tag :poolmembership_id, @poolmembership.id %>
                          <%= f.submit %>
                        <% end %>
                      </div>
                    </div>
                  </td>
                  <td class="flag"><%= image_tag Team.find(game.team2_id).avatar.url(:mini), :class => 'flag' %></td>
                  <td class="default-hide small-show"><%= Team.find(game.team2_id).name %></td>
                  <td  class="default-hide small-show"><% if game.score1 == nil && game.score2 == nil %>
                        x - x
                      <% else %>
                        <%= game.score1 %> - <%= game.score2 %>
                      <% end %></td>
                  <td class="bold green">10</td>
                </tr>
              <% end %>
            </tbody>
          </thead>
        </table>

        <div class="content-btn">
          <div class="center">
            <button class="green" type="submit">Opslaan</button>
          </div>
          <div class="right">
            <button class="green left" type="submit"><span class="default-hide small-show">Volgende &nbsp; </span><i class="fa fa-chevron-right"></i></button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="medium-1-4">
    <div class="box aside">
      <div class="side-header">
        <h2>Mijn pools</h2>
      </div>
      <div class="pool-list-small">
        <ul>
          <li>
            <a href="#" class="grey">The Next Web Leeuwarden</a>
            <a href="#" class="grey">The Next Web Leeuwarden</a>
            <a href="#" class="grey">The Next Web Leeuwarden</a>
          </li>
        </ul>
        <a href="#" class="btn green">Pool aanmaken</a>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
var display = false;

$(".infoshower").hover(function () {
  $(this).find(".hiddeninfo").fadeIn('fast')
}, function () {
  $(this).find(".hiddeninfo").fadeOut('fast')
});
var display = false;
</script>