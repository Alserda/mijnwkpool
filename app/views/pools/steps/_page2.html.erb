<div class="container cf">
  <div class="steps">
    <div class="step">
      1. <span class="pure-hidden-phone">Pool informatie</span>
    </div><div class="step active">
      2. <span class="pure-hidden-phone">Bevestigen</span>
    </div><div class="step">
      3. <span class="pure-hidden-phone">Vrienden uitnodigen</span>
    </div>
  </div>

  <h1>1. Pool informatie</h1>

    <div class="pure-g-r">
        <div class="pure-u-1-3">
          <div class="avatar">
            <img src="http://placehold.it/265x265" alt="placeholder">
          </div>
        </div><div class="pure-u-2-3">
          <div class="form_container_steps">
            <div class="field">
              <label for="poolnaam">Pool naam</label>
              <p><%= @pool.name %></p>
            </div>
            <div class="field">
              <label for="prive">Privacy</label>
              <% if @pool.is_public? %>
                <p>Nee</p>
              <% else %>
                <p>Ja</p>
                <script>$(function(){$("#private_pool_enabled").show();})</script>
              <% end %>
            </div>
              <% if !@pool.is_public? %>               

            <div id="private_pool_enabled">
              <div class="field">
                <label for="poolnaam">Wachtwoord</label>
                <p>
                  <span class='password'>
                    <% @pool.password.length.times do %>*<% end %></span>
                  <span class='hide password'><%= @pool.password %></span>
                </p>
                <p><a class="togglepassword" href="#">Toon wachtwoord</a><a class="togglepassword hide" href="#">Verberg wachtwoord</a></p>
              </div>
            </div>
              <% end %>

            <%= f.submit "Vorige stap", :class => %w(prev btn), :name => 'back_button' %>
            <%= f.submit "Volgende stap", :class => %w(primary next btn) %>

          </div>
        </div>
      </div>
</div>
