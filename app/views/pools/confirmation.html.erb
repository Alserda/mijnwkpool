<div class="grid-r">
  <div class="medium-3-4">
    <div class="box">
      <div class="steps">
        <div class="step active">
          1. <span class="default-hide small-show">Pool informatie</span>
        </div>
        <div class="step active">
          2. <span class="default-hide small-show">Bevestigen</span>
        </div>
        <div class="step">
          3. <span class="default-hide small-show">Vrienden uitnodigen</span>
        </div>
      </div>

      <div class="content-header">
        <h1>2. Pool bevestigen</h1>
      </div>

      <div class="grid-r">
        <div class="small-1-3">
          <div class="avatar">
            <%= image_tag @pool.avatar.url(:small), id: 'uploadPreview' %>
          </div>
        </div>
        <div class="small-2-3">
          <div class="pool_new_form">
              <div class="form-field">
              <%= label :name, 'Pool naam' %>
              <h3><%= @pool.name %></h3>
            </div>

            <div class="form-field inline">
              <label>Toegankelijkheid</label>
              <% if @pool.is_public? %>
                <h3>Openbare pool</h3>
              <% else %>
                <h3>Priv&eacute; pool</h3>
              <% end %>
            </div>

            <% if !@pool.is_public? %>
            <div class="form-field" id="private_pool_enabled">
              <div class="form-field">
                <label for="poolnaam">Wachtwoord</label>
                <h3>
                  <span class='password'><% @pool.password.length.times do %>*<% end %></span>
                  <span class='hide password'><%= @pool.password %></span>
                </h3>
                <h3>
                  <a class="togglepassword" href="#">Toon wachtwoord</a>
                  <a class="togglepassword hide" href="#">Verberg wachtwoord</a>
                </h3>
              </div>
            </div>
            <% end %>

            <div class="form-field">
              <%= link_to invite_pool_path(@pool.id), :class => 'green btn left' do %>
                Volgende stap &nbsp; <%= fa_icon 'chevron-right' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class='default-0 medium-1-4'>
    <%= render "shared/aside" %>
  </div>
</div>

<%= javascript_tag do %>
  poolPassword();
<% end %>
