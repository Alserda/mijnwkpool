<%= form_for @pool, url: {action: "create"} do |f| %>
	Name: <%= f.text_field :name %> <br/>

	Image: <%= f.text_field :image %> <br/>

	<br/>
	Public:<br/>
	No : <%= f.radio_button :public, false %><br />
	Yes: <%= f.radio_button :public, true %><br />
	<br/>

	Password:<br/> <%= f.password_field :password %>
	<%= error_message_for(:password, :prepend_text => "Het wachtwoord moet minimaal 7 tekens. ") %> <br/>
	<br/>

	Password confirmation: <br/> <%= f.password_field :password_confirmation %>
	<%= error_message_for(:password_confirmation, :prepend_text => "De wachtwoorden komen niet overeen. ") %> 
	<br/>
	<br/>

	<%= f.submit "Aanmaken" %>
<% end %>